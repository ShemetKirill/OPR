@model CourseOPR.Models.Speciality

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы действительно хотите удалить</h3>
<div>
    <h4>Специальность</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Специальность
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpecialityName)
        </dd>
        <dt class = "col-sm-2">
            Факультет
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Faculty.FacultyName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SpecialityId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
