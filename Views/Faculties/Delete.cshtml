@model CourseOPR.Models.Faculty

@{
    ViewData["Title"] = "Потверждение";
}

<h1>Удалить факультет</h1>

<h3>Вы действительно хотите удалить?</h3>
<div>
    <h4>Факультет</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название факультета
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacultyName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FacultyId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
