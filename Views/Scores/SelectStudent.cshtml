@model CourseOPR.Models.Student

@{
    ViewData["Title"] = "SeelectStudent";
}

<h1>Импорт </h1>

<h4>Оценки</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SelectStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Студент</label>
                <select asp-for="StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Поиск" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к выписке</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}