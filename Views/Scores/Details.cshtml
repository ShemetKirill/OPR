@model CourseOPR.Models.Score

@{
    ViewData["Title"] = "Details";
}

<h1>Подробнее</h1>

<div>
    <h4>Оценка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Оценка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScoreValue)
        </dd>
        <dt class = "col-sm-2">
            Студент
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.StudentFullName)
        </dd>
        <dt class = "col-sm-2">
            Предмет
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject.SubjectName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ScoreId">Изменить</a> |
    <a asp-action="Index">Назад к выписке</a>
</div>
