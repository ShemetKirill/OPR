@model CourseOPR.Models.Group

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы действительно хотите удалить?</h3>
<div>
    <h4>Группа</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Номер группы
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GroupNumber)
        </dd>
        <dt class = "col-sm-2">
            Специальность
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Speciality.SpecialityName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GroupId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
